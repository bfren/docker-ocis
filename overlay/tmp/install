#!/bin/sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Add oCIS user.
#======================================================================================================================

bf-adduser ocis


#======================================================================================================================
# Install oCIS executable.
#======================================================================================================================

bf-echo "Installing oCIS..."

# get file path
FILE=/tmp/ocis

# make file executable and move to /bin
chmod +x ${FILE}
mv ${FILE} /bin
bf-done
