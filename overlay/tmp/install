#!/bin/sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Add oCIS user.
#======================================================================================================================

bf-adduser ocis


#======================================================================================================================
# Verify oCIS download.
#======================================================================================================================

# get file path
FILE=/tmp/ocis

# check integrity
sha256sum -cs ${FILE}.sha256 \
    || bf-error "oCIS download does not match checksum."


#======================================================================================================================
# Install oCIS executable.
#======================================================================================================================

# make file executable and move to /bin
bf-echo "Installing oCIS..."
chmod +x ${FILE}
mv ${FILE} /bin
bf-done
